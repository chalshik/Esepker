<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.esepkersoft.Controllers.LoginController"
          style="-fx-background-color: #f0f0f0;">
    
    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="Login" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <VBox spacing="10.0" alignment="CENTER">
            <Label text="Enter Password:" style="-fx-font-size: 24px; -fx-text-fill: #666666;"/>
            <PasswordField fx:id="passwordField" prefWidth="300" prefHeight="50" style="-fx-font-size: 24px;"/>
        </VBox>

        <Button text="Login" onAction="#handleLoginButton" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 24px; -fx-padding: 15 30;"/>
    </VBox>
</StackPane> 