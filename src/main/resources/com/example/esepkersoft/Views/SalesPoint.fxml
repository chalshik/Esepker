<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.URL?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.esepkersoft.Controllers.SalesPointController">
    <stylesheets>
        <URL value="@minimal-styles.css" />
    </stylesheets>
    <children>
        <HBox styleClass="main-container" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="30">
            <children>
                <!-- Left Side -->
                <VBox spacing="20" styleClass="content-area" HBox.hgrow="ALWAYS">
                    <children>
                        <VBox styleClass="panel">
                            <children>
                                <Label styleClass="section-header" text="Barcode Scanning" />
                                <HBox spacing="20">
                                    <children>
                                        <TextField fx:id="barcodeField" promptText="Scan Barcode" styleClass="text-input" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="scanBarcodebtn" styleClass="action-button" text="Scan" />
                                    </children>
                                </HBox>
                                <!-- Enlarged Product Details -->
                                <VBox fx:id="productDetailsPane" styleClass="product-details">
                                    <children>
                                        <Label fx:id="productNameLabel" styleClass="product-name" />
                                        <Label fx:id="productPriceLabel" styleClass="product-price" />
                                        <HBox alignment="CENTER_LEFT" spacing="20">
                                            <children>
                                                <Label text="Quantity:" />
                                                <TextField fx:id="quantityField" prefWidth="120" styleClass="text-input" />
                                                <ComboBox fx:id="measureUnitCombo" styleClass="combo-box" prefWidth="120" />
                                                <Label fx:id="totalOfProductLabel" styleClass="total-label" text="Label" />
                                                <Button fx:id="addToCartbtn" styleClass="action-button" text="Add to Cart" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                        <!-- Cart Enlarged -->
                        <VBox styleClass="panel" VBox.vgrow="ALWAYS">
                            <children>
                                <Label styleClass="section-header" text="Cart" />
                                <TableView fx:id="cartTable" styleClass="cart-table" VBox.vgrow="ALWAYS">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="barcodeColumn" text="Barcode" />
                                        <TableColumn fx:id="nameColumn" text="Name" />
                                        <TableColumn fx:id="quantityColumn" text="Quantity" />
                                        <TableColumn fx:id="priceColumn" text="Price" />
                                        <TableColumn fx:id="totalColumn" text="Total" />
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT" spacing="20">
                                    <children>
                                        <Label text="Total Amount:" />
                                        <Label fx:id="totalAmountLabel" styleClass="total-amount" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <!-- Payment Enlarged -->
                <VBox prefWidth="400" spacing="20" styleClass="payment-section">
                    <children>
                        <Label styleClass="section-header" text="Payment" />
                        <VBox styleClass="panel-light">
                            <children>
                                <Label styleClass="subsection-header" text="Payment Method" />
                                <HBox spacing="30">
                                    <children>
                                        <RadioButton fx:id="cashRadio" text="Cash" />
                                        <RadioButton fx:id="cardRadio" text="Card" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox fx:id="cashPaymentPane" styleClass="panel-light">
                            <children>
                                <Label styleClass="subsection-header" text="Cash Payment" />
                                <TextField fx:id="receivedAmountField" promptText="Enter received amount" styleClass="text-input" prefWidth="200" />
                                <Button fx:id="calculateChangebtn" styleClass="secondary-button" text="Calculate Change" />
                                <HBox alignment="CENTER_LEFT" spacing="20">
                                    <children>
                                        <Label text="Change:" />
                                        <Label fx:id="changeLabel" styleClass="change-amount" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <Button fx:id="commitbtn" styleClass="primary-button" text="Commit Transaction" />
                        <Label fx:id="labelForErrorCommits" styleClass="error-message" text="Label" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
