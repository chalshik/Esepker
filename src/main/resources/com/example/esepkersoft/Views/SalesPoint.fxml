<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.esepkersoft.Controllers.SalesPointController">
    <children>

        <HBox spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
            <children>
                <!-- Left Side: Barcode Scanning and Product Entry -->
                <VBox spacing="15" HBox.hgrow="ALWAYS">
                    <children>
                        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Barcode Scanning" />
                                <HBox spacing="10">
                                    <children>
                                        <TextField fx:id="barcodeField" promptText="Scan Barcode" style="-fx-font-size: 16px; -fx-padding: 10px;" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="scanBarcodebtn" style="-fx-font-size: 16px; -fx-padding: 10px 20px;" text="Scan" />
                                    </children>
                                </HBox>

                                <VBox fx:id="productDetailsPane" spacing="10" style="-fx-background-color: #E8F5E9; -fx-padding: 15; -fx-background-radius: 10;">
                                    <children>
                                        <Label fx:id="productNameLabel" style="-fx-font-size: 16px;" />
                                        <Label fx:id="productPriceLabel" style="-fx-font-size: 16px;" />

                                        <HBox alignment="CENTER_LEFT" spacing="10">
                                            <children>
                                                <Label style="-fx-font-size: 16px;" text="Quantity:" />
                                                <TextField fx:id="quantityField" prefWidth="80" style="-fx-font-size: 16px; -fx-padding: 8px;" />
                                                <ComboBox fx:id="measureUnitCombo" style="-fx-font-size: 16px;" />
                                                <Label fx:id="totalOfProductLabel" style="-fx-font-size: 16px;" text="Label" />
                                                <Button fx:id="addToCartbtn" style="-fx-font-size: 16px; -fx-padding: 10px 20px;" text="Add to Cart" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Cart Section -->
                        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Cart" />
                                <TableView fx:id="cartTable" style="-fx-font-size: 16px;">
                                    <columns>
                                        <TableColumn fx:id="barcodeColumn" text="Barcode" />
                                        <TableColumn fx:id="nameColumn" text="Name" />
                                        <TableColumn fx:id="quantityColumn" text="Quantity" />
                                        <TableColumn fx:id="priceColumn" text="Price" />
                                        <TableColumn fx:id="totalColumn" text="Total" />
                                    </columns>
                                </TableView>
                                <Label fx:id="totalAmountLabel" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Right Side: Payment Section -->
                <VBox prefWidth="300" spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Payment" />

                        <HBox spacing="10">
                            <children>
                                <RadioButton fx:id="cashRadio" style="-fx-font-size: 16px;" text="Cash" />
                                <RadioButton fx:id="cardRadio" style="-fx-font-size: 16px;" text="Card" />
                            </children>
                        </HBox>

                        <VBox fx:id="cashPaymentPane" spacing="10">
                            <children>
                                <TextField fx:id="receivedAmountField" promptText="Enter received amount" style="-fx-font-size: 16px; -fx-padding: 10px;" />
                                <Button fx:id="calculateChangebtn" style="-fx-font-size: 16px; -fx-padding: 10px 20px;" text="Calculate Change" />
                                <Label fx:id="changeLabel" style="-fx-font-size: 16px;" />
                            </children>
                        </VBox>

                        <Button fx:id="commitbtn" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 15px 30px;" text="Commit Transaction" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
